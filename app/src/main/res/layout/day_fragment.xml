<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/day_fragment_root_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false"
  android:clipToPadding="false"
  android:orientation="vertical"
  >

  <!-- Do not add padding to this container. We use this root view height for the total height to
  divide among entry views and new event button. -->

  <carbon.widget.FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    <androidx.core.widget.NestedScrollView
      android:id="@+id/entry_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      android:paddingBottom="20dp"
      >
      <LinearLayout
        android:id="@+id/entry_scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="108dp"
        >
        <!-- Facebook Native Ad -->
        <carbon.widget.FrameLayout
          android:id="@+id/facebook_ad_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="1dp"
          android:clipChildren="false"
          android:clipToPadding="false"
          android:visibility="gone"
          app:carbon_cornerRadius="@dimen/entry_corner_radius"
          >
          <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            >
            <LinearLayout
              android:id="@+id/ad_icon_title_container"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="8dp"
              android:paddingTop="8dp"
              >
              <carbon.widget.FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                app:carbon_cornerRadius="6dp"
                >
                <com.facebook.ads.AdIconView
                  android:id="@+id/ad_icon"
                  android:layout_width="42dp"
                  android:layout_height="42dp"
                  />
              </carbon.widget.FrameLayout>
              <com.compscieddy.eddie_utils.eui.FontTextView
                android:id="@+id/ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.02"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:fontface="jost_regular"
                />
            </LinearLayout>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:orientation="vertical"
              >
              <com.compscieddy.eddie_utils.eui.FontTextView
                android:id="@+id/ad_sponsored_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:alpha="0.8"
                android:textColor="@color/black_t70"
                android:textSize="11sp"
                />
              <com.compscieddy.eddie_utils.eui.FontTextView
                android:id="@+id/ad_options_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>
            <com.facebook.ads.MediaView
              android:id="@+id/ad_media_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ad_icon_title_container"
              />
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/ad_media_view"
              android:clipChildren="false"
              android:clipToPadding="false"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="12dp"
              android:paddingRight="8dp"
              android:paddingBottom="10dp"
              >
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.compscieddy.eddie_utils.eui.FontTextView
                  android:id="@+id/ad_social_context"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="2dp"
                  android:textColor="@color/black_t40"
                  />
                <com.compscieddy.eddie_utils.eui.FontTextView
                  android:id="@+id/ad_body"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black_t80"
                  />
              </LinearLayout>
              <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
              <carbon.widget.FrameLayout
                android:id="@+id/ad_call_to_action_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:carbon_elevation="6dp"
                >
                <Button
                  android:id="@+id/ad_call_to_action_button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/ad_media_view"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textSize="12sp"
                  />
              </carbon.widget.FrameLayout>
            </LinearLayout>
          </RelativeLayout>
        </carbon.widget.FrameLayout>
      </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- New Entry Buttons -->
    <carbon.widget.FrameLayout
      android:id="@+id/new_entry_buttons_container_with_background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="60dp"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:padding="4dp"
      app:carbon_cornerRadius="999dp"
      app:carbon_elevation="5dp"
      >
      <carbon.widget.LinearLayout
        android:id="@+id/new_entry_buttons_container"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:carbon_cornerRadius="999dp"
        >
        <carbon.widget.FrameLayout
          android:id="@+id/new_text_entry_button"
          style="@style/NewEntryButton"
          >
          <com.compscieddy.eddie_utils.eui.ColorImageView
            style="@style/NewEntryButtonIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_text_style"
            />
        </carbon.widget.FrameLayout>
        <carbon.widget.FrameLayout
          android:id="@+id/new_photo_entry_button"
          style="@style/NewEntryButton"
          >
          <com.compscieddy.eddie_utils.eui.ColorImageView
            style="@style/NewEntryButtonIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_camera_1"
            />
        </carbon.widget.FrameLayout>
      </carbon.widget.LinearLayout>
    </carbon.widget.FrameLayout>
  </carbon.widget.FrameLayout>

</LinearLayout>