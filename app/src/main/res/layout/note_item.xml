<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clipChildren="false"
  android:clipToPadding="false"
  android:orientation="horizontal"
  >

  <carbon.widget.LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >

    <com.compscieddy.eddie_utils.eui.FontAutoCompleteTextView
      android:id="@+id/hashtag_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@null"
      android:hint="Hashtag name..."
      android:paddingLeft="6dp"
      android:textSize="15sp"
      android:visibility="gone"
      app:fontface="jost_regular"
      />

    <carbon.widget.LinearLayout
      android:id="@+id/main_note_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:orientation="horizontal"
      >
      <carbon.widget.FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="6dp"
        android:paddingRight="14dp"
        >
        <carbon.widget.FrameLayout
          android:id="@+id/dot_control"
          android:layout_width="4dp"
          android:layout_height="4dp"
          android:layout_gravity="center_vertical"
          android:background="?attr/fgPrimaryT10"
          android:clipChildren="false"
          android:clipToPadding="false"
          app:carbon_cornerRadius="999dp"
          />
        <View
          android:id="@+id/line_indicator"
          android:layout_width="3dp"
          android:layout_height="match_parent"
          />
      </carbon.widget.FrameLayout>
      <com.compscieddy.eddie_utils.eui.FontAutoCompleteTextView
        android:id="@+id/note_text_autocomplete"
        style="@style/NoteAutoComplete"
        />
    </carbon.widget.LinearLayout>

  </carbon.widget.LinearLayout>

</carbon.widget.LinearLayout>